#include <stdio.h>
#include <string.h>

int main() {
  printf("Welcome to Part 2 of MSH BOYS games\n\n");
  printf("Type 'Play' to continue: ");

  char a[10];
  scanf("%s", a);

  int b = 0;
  int c = 0;

  if (strcmp(a, "Play") == 0) {
    printf("You are now in game\n");

    printf("You are lost in a maze. Try to find your way out.\n");

    while (1) {
      printf("> ");
      scanf("%s", a);

      if (strcmp(a, "north") == 0 || strcmp(a, "south") == 0 || strcmp(a, "east") == 0 || strcmp(a, "west") == 0) {
        if (c) {
          printf("You use the map to navigate through the maze.\n");
          printf("You reach the end of the maze! Congratulations!\n");
          break;
        } else {
          printf("You wander aimlessly through the maze.\n");
        }
      } else if (strcmp(a, "chest") == 0) {
        if (b) {
          printf("You unlock the chest and find a map inside!\n");
          c = 1;
        } else {
          printf("The chest is locked.\n");
        }
      } else if (strcmp(a, "key") == 0) {
        b = 1;
        printf("You have found a key.\n");
      } else {
        printf("Please look at the instructions.\n");
      }
    }
  } else {
    printf("Invalid input. Exiting game.\n");
  }

  return 0;
}
